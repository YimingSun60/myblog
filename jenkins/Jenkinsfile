pipeline {
    agent any

    tools{
        go '1.21'
    }

    stages {
        stage('Build') {
            environment {
                        // Set the target OS and architecture
                        GOOS   = 'linux'
                        GOARCH = 'amd64'
            }
            steps {
                sh 'go build -o blogserver'
            }
        }
        stage('Deploy') {
            steps{
                sh './blogserver'
            }
        }
    }
}